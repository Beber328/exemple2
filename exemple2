pipeline {
    agent any

    parameters {
        string(name: 'NAME', description: 'Please tell me your name?')
        text(name: 'DESC', description: 'Describe about the job details')
        booleanParam(name: 'SKIP_TEST', description: 'Want to skip running Test cases?')
        choice(name: 'BRANCH', choices: ['Master', 'Dev'], description: 'Choose the branch')
        password(name: 'SONAR_SERVER_PWD', description: 'Enter SONAR password')
    }

    stages {
        stage('Example Stage') {
            steps {
                echo "Hello, ${params.NAME}!"
                echo "Job details: ${params.DESC}"
                
                if (params.SKIP_TEST) {
                    echo "Skipping Test cases."
                } else {
                    echo "Running Test cases."
                }

                echo "Selected branch: ${params.BRANCH}"

                withCredentials([string(credentialsId: 'sonar-password', variable: 'SONAR_SERVER_PWD')]) {
                    echo "Sonar password: ${params.SONAR_SERVER_PWD}"
                    // Here you can use SONAR_SERVER_PWD as a secret
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
